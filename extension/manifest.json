{
  "manifest_version": 3,
  "name": "Momi - 빠른 저장",
  "version": "1.0.0",
  "description": "웹페이지를 Momi에 한 번의 클릭으로 저장하세요",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Momi에 저장"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab"]
}
